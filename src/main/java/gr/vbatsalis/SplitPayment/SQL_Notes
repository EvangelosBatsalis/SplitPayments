CREATE TABLE PAYMENTS (USERID int(10) NOT NULL, DESCRIPTION varchar(255) NOT NULL, `DATE` timestamp NOT NULL, AMOUNT decimal(19, 0) NOT NULL);

DROP TABLE IF EXISTS PAYMENTS;

CREATE TABLE `USER` (ID int(10) NOT NULL AUTO_INCREMENT, USER_NAME varchar(255) NOT NULL, EMAIL varchar(255) NOT NULL UNIQUE, PRIMARY KEY (ID));

DROP TABLE IF EXISTS `USER`;


//just a simple ER
CREATE TABLE `USER` (ID int(10) NOT NULL AUTO_INCREMENT, USER_NAME varchar(255), EMAIL varchar(255) UNIQUE, PRIMARY KEY (ID));
